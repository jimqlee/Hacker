article.archive
  padding 0
  margin 2em auto

.archive-post
  text-align left
  margin 2em auto

  .archive-title
    font-size 18px
    line-height 1
    position relative
    color #212121
    margin 0

    a
      color #555

      span
        padding-bottom 3px
        -webkit-transition box-shadow 0.15s
        transition box-shadow 0.15s
        box-shadow inset 0 -2px 0 rgba(240, 56, 56, 0)

      &:hover
        color #212121

  time
    font-style italic
    display inline-block
    float right
    font-size 12px
    color #555

    a
      font-size 1.6rem
      color #9e9e9e

      &:before
        content '#'
      &:hover
        color #F03838

article div .post
    clear both
    height 100px
    border-bottom 1px solid #eee

    div
            min-height: 42px;

.article-tag
    float: right;

.article-tag-list
    list-style none
    margin-left -38px

    li
        float left
        margin-right 10px
        border 1px solid #eee
        padding 5px
        border-radius 0 5px 5px 0
        height 18px
        line-height 18px
        font-size 12px
        background #eee

.article-tag-list-item a
    color #9e9e9e
